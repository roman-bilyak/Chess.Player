<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:Chess.Player.MAUI.ViewModels"
             x:Class="Chess.Player.MAUI.Pages.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">
    <VerticalStackLayout Padding="20, 10" Spacing="20">
        <Grid ColumnDefinitions="*, Auto">
            <Label Grid.Row="0" Grid.Column="0" Text="Cache" FontSize="14" FontAttributes="Bold"/>
            <Button Grid.Row="0" Grid.Column="1" Text="Clear All" Command="{Binding ClearCacheCommand}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>